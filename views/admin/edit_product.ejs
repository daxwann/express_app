<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<%= edit ? 'edit-product' : 'add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= edit ? product.title : undefined %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="url" name="imageUrl" id="imageUrl" value="<%= edit ? product.imageUrl : undefined %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" step="0.01" min="0.01" name="price" id="price" value="<%= edit ? product.price : undefined %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea rows="5" name="description" id="description"><%= edit ? product.description : undefined %></textarea>
            </div>
            <button class="btn" type="submit"><%= edit ? "Edit Product" : "Add Product" %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>